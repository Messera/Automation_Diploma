<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Aliexpress" thread-count="1" parallel="tests">
    <listeners>
        <listener class-name="testNgUtils.SelenideListener"/>
    </listeners>

    <test enabled="true" name="Aliexpress Cart tests">
        <classes>
            <class name="aliexpress.CartTest"/>
        </classes>
    </test>
    <test enabled="true" name="Aliexpress login tests">
        <classes>
            <class name="aliexpress.LoginTest"/>
        </classes>
    </test>
    <test enabled="true" name="Aliexpress hidden button test">
        <classes>
            <class name="aliexpress.HiddenButtonTest"/>
        </classes>
    </test>
    <test enabled="true" name="Aliexpress nothing found test">
        <classes>
            <class name="aliexpress.NothingFoundTest"/>
        </classes>
    </test>
    <test enabled="true" name="Aliexpress API tests">
        <classes>
            <class name="aliexpress.ApiTest"/>
        </classes>
    </test>
</suite>